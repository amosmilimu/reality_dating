<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.MatchesFragment">

    <LinearLayout
        android:id="@+id/linearLayoutMatchContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMatchesView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/agaramondpro_regular"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_50sdp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutMatchEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:src="@drawable/tab_page_match" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/msg_matchempty"
            android:fontFamily="@font/agaramondpro_regular"
            android:textAlignment="center"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_didnotmatch"
            android:textAlignment="center"
            android:fontFamily="@font/agaramondpro_regular"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>


</RelativeLayout>