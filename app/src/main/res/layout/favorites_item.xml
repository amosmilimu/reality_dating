<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="@dimen/_10sdp"
    app:cardElevation="0dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageViewFavoritesItemFavoritesImage"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"
        app:riv_corner_radius="@dimen/_70sdp"
        app:riv_mutate_background="true"
        app:riv_oval="false" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewFavoritesItemFavoritesOnline"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_46sdp"
        android:layout_marginLeft="@dimen/_46sdp"
        android:layout_marginTop="@dimen/_46sdp"
        android:src="@drawable/user_online"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewFavoritesItemFavoritesOffline"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_46sdp"
        android:layout_marginLeft="@dimen/_46sdp"
        android:layout_marginTop="@dimen/_46sdp"
        android:src="@drawable/user_offline"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewFavoritesItemFavoritesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_toEndOf="@+id/roundedImageViewFavoritesItemFavoritesImage"
        android:layout_toRightOf="@+id/roundedImageViewFavoritesItemFavoritesImage"
        android:text="@string/full_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/agaramondpro_regular"/>

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/RelativeTimeFavoritesItemFavoritesDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFavoritesItemFavoritesName"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_toEndOf="@+id/roundedImageViewFavoritesItemFavoritesImage"
        android:layout_toRightOf="@+id/roundedImageViewFavoritesItemFavoritesImage"
        android:maxLines="1"
        android:text="@string/date"
        android:fontFamily="@font/agaramondpro_regular"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/textViewFavoritesItemFavoritesUnread"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/agaramondpro_regular"
        android:maxLines="1"
        android:text="@string/_0"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone" />

</RelativeLayout>